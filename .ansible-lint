---
exclude_paths:
  - .github
  # exclude playbooks imported from the ceph-ansible upstream
  - files/playbooks/master/ceph-bootstrap-dashboard.yml
  - files/playbooks/master/ceph-purge-cluster.yml
  - files/playbooks/master/ceph-purge-storage-node.yml
  - files/playbooks/octopus/ceph-bootstrap-dashboard.yml
  - files/playbooks/octopus/ceph-purge-cluster.yml
  - files/playbooks/octopus/ceph-purge-storage-node.yml
  - files/playbooks/pacific/ceph-bootstrap-dashboard.yml
  - files/playbooks/pacific/ceph-purge-cluster.yml
  - files/playbooks/pacific/ceph-purge-storage-node.yml
  - files/playbooks/quincy/ceph-bootstrap-dashboard.yml
  - files/playbooks/quincy/ceph-purge-cluster.yml
  - files/playbooks/quincy/ceph-purge-storage-node.yml
use_default_rules: true
rulesdir:
  - ./.ansible-lint-rules/
mock_roles:
  - ceph-client
  - ceph-config
  - ceph-container-common
  - ceph-crash
  - ceph-dashboard
  - ceph-defaults
  - ceph-facts
  - ceph-fetch-keys
  - ceph-handler
  - ceph-infra
  - ceph-iscsi-gw
  - ceph-mds
  - ceph-mgr
  - ceph-mon
  - ceph-nfs
  - ceph-osd
  - ceph-rbd-mirror
  - ceph-restapi
  - ceph-rgw
  - ceph-validate
mock_modules:
  - ceph_volume
skip_list:
  - parser-error  # AnsibleParserError.
  - var-spacing   # Variables should have spaces before and after: {{ var_name }}.
  - fqcn-builtins
